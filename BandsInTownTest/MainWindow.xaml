<Window x:Class="BandsInTownTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BandsInTownTest"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Bands In Town Sharp - Test" Width="525" SizeToContent="Height" ResizeMode="NoResize">
    <StackPanel Margin="10" Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="5">
            <RadioButton Name="radioButtonArist" Margin="5" GroupName="Type" IsChecked="True">Artist Information</RadioButton>
            <RadioButton Name="radioButtonAristEvents" Margin="5" GroupName="Type">Artist Event Information</RadioButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBox Width="250" Name="textBoxArtistSearch" VerticalAlignment="Center" />
            <Button Name="buttonFetchData" Content="Fetch Data" Margin="10,0,0,0" Padding="8,3" Click="buttonFetchData_Click" />
        </StackPanel>
        <TextBox Height="300" Margin="0,10,0,0" IsReadOnly="true" VerticalScrollBarVisibility="Visible" Name="textBoxOutput" TextWrapping="Wrap">
                
        </TextBox>
    </StackPanel>
</Window>
